{
  "openapi": "3.0.0",
  "info": {
    "title": "Desafio API Pedidos",
    "version": "1.0.0",
    "description": "API para criar/ler/listar/atualizar/deletar pedidos"
  },
  "servers": [
    { "url": "http://localhost:3000" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ItemInput": {
        "type": "object",
        "properties": {
          "idItem": { "type": "string" },
          "quantidadeItem": { "type": "integer" },
          "valorItem": { "type": "number" }
        },
        "required": ["idItem", "quantidadeItem", "valorItem"]
      },
      "OrderInput": {
        "type": "object",
        "properties": {
          "numeroPedido": { "type": "string" },
          "valorTotal": { "type": "number" },
          "dataCriacao": { "type": "string", "format": "date-time" },
          "items": { "type": "array", "items": { "$ref": "#/components/schemas/ItemInput" } }
        },
        "required": ["numeroPedido", "valorTotal", "dataCriacao", "items"]
      }
    }
  },
  "paths": {
    "/login": {
      "post": {
        "summary": "Autenticar e obter token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/order": {
      "post": {
        "summary": "Criar pedido",
        "security": [ { "bearerAuth": [] } ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/OrderInput" } } }
        },
        "responses": { "201": { "description": "Created" }, "400": { "description": "Bad Request" } }
      }
    },
    "/order/list": {
      "get": {
        "summary": "Listar orders",
        "security": [ { "bearerAuth": [] } ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/order/{id}": {
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
      ],
      "get": {
        "summary": "Obter order por id",
        "security": [ { "bearerAuth": [] } ],
        "responses": { "200": { "description": "OK" }, "404": { "description": "Not Found" } }
      },
      "put": {
        "summary": "Atualizar order (valorTotal)",
        "security": [ { "bearerAuth": [] } ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "type": "object", "properties": { "valorTotal": { "type": "number" } } } } }
        },
        "responses": { "200": { "description": "OK" } }
      },
      "delete": {
        "summary": "Deletar order",
        "security": [ { "bearerAuth": [] } ],
        "responses": { "200": { "description": "OK" }, "404": { "description": "Not Found" } }
      }
    }
  }
}
